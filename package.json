{
	"name": "@tevm/primitives",
	"version": "0.1.0",
	"private": false,
	"description": "Ethereum primitives and cryptography library with TypeScript implementations and native Zig bindings via Bun FFI",
	"keywords": [
		"ethereum",
		"primitives",
		"crypto",
		"zig",
		"bun",
		"ffi",
		"abi",
		"keccak",
		"eip191"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/evmts/primitives.git"
	},
	"license": "MIT",
	"contributors": [
		"Fucory (x.com/fucory)",
		"polarzero (github.com/0xpolarzero)",
		"Vlad (x.com/Vladfdp)"
	],
	"sideEffects": false,
	"type": "module",
	"exports": {
		"./package.json": "./package.json",
		".": {
			"import": {
				"types": "./types/index.d.ts",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		}
	},
	"main": "dist/index.cjs",
	"module": "dist/index.js",
	"types": "types/index.d.ts",
	"files": ["dist", "src", "!src/**/*.spec.ts", "!src/**/*.test.ts", "types"],
	"scripts": {
		"all": "bun i && bun run build && bun lint && bun format && bun test:run && bun generate:docs",
		"build": "bun run build:zig && bun run build:dist && bun run build:types",
		"build:zig": "zig build",
		"build:dist": "tsup",
		"build:types": "tsup --dts-only && tsc --emitDeclarationOnly --declaration",
		"clean": "rm -rf node_modules && rm -rf dist && rm -rf types && rm -rf zig-out && rm -rf zig-cache",
		"format": "biome format . --write",
		"format:check": "biome format .",
		"generate:docs": "bun run typedoc",
		"lint": "biome check . --write --unsafe",
		"lint:check": "biome check . --verbose",
		"lint:deps": "bunx depcheck",
		"lint:package": "bunx publint --strict && bunx attw --pack",
		"package:up": "bun up --latest",
		"test": "vitest --watch",
		"test:coverage": "vitest --coverage --run",
		"test:run": "vitest run",
		"typecheck": "tsc --noEmit"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@ethereumjs/rlp": "^10.0.0",
		"@ethersproject/rlp": "^5.8.0",
		"@noble/curves": "^2.0.1",
		"@noble/hashes": "^2.0.1",
		"@noble/secp256k1": "^3.0.0",
		"@tevm/tsconfig": "^1.0.0-next.142",
		"@tevm/tsupconfig": "^1.0.0-next.148",
		"@types/bun": "latest",
		"@types/node": "^22.10.2",
		"bindings": "^1.5.0",
		"ethers": "^6.13.4",
		"glob": "^11.0.0",
		"mitata": "^1.0.34",
		"tsup": "^8.5.0",
		"typedoc": "^0.28.14",
		"typedoc-plugin-markdown": "^4.9.0",
		"typescript": "^5.7.2",
		"viem": "^2.21.54",
		"vitest": "^2.1.8"
	},
	"optionalDependencies": {
		"ffi-napi": "^4.0.3",
		"ref-napi": "^3.0.3"
	}
}
