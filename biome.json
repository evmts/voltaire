{
	"$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
	"root": true,
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": true,
		"includes": [
			"**",
			"!**/node_modules",
			"!**/dist",
			"!**/types",
			"!**/wasm",
			"!**/native",
			"!**/zig-out",
			"!**/zig-cache",
			"!**/target",
			"!**/bench",
			"!**/benchmarks",
			"!**/examples",
			"!**/.zig-cache",
			"!**/*.wasm",
			"!**/*.so",
			"!**/*.dll",
			"!**/*.dylib",
			"!**/lib",
			"!**/scripts/dist-address-wasm",
			"!**/scripts/dist-wasm",
			"!**/scripts/dist-noble",
			"!**/scripts/migrate-crypto-docs.ts",
			"!**/scripts/inspect-ox-api.ts",
			"!**/docs",
			"!**/vendor",
			"!**/worktrees"
		]
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 80,
		"lineEnding": "lf"
	},
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noExcessiveCognitiveComplexity": "warn",
				"noForEach": "off",
				"noBannedTypes": "warn"
			},
			"correctness": {
				"noVoidTypeReturn": "warn"
			},
			"style": {
				"useImportType": "error",
				"useNodejsImportProtocol": "error",
				"noNonNullAssertion": "warn",
				"noParameterAssign": "warn"
			},
			"suspicious": {
				"noExplicitAny": "warn",
				"noShadowRestrictedNames": "warn",
				"noExportsInTest": "warn",
				"noConsole": { "level": "warn", "options": { "allow": ["log"] } }
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"jsxQuoteStyle": "double",
			"quoteProperties": "asNeeded",
			"trailingCommas": "all",
			"semicolons": "always",
			"arrowParentheses": "always",
			"bracketSpacing": true,
			"bracketSameLine": false
		}
	}
}
