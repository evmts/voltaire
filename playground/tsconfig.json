{
	"compilerOptions": {
		"target": "ES2022",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"types": ["vite/client"],
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": false,
		"moduleDetection": "force",
		"noEmit": true,

		/* Path mapping */
		"paths": {
			"voltaire/primitives/Address": ["../src/primitives/Address/index.ts"],
			"voltaire/primitives/Hex": ["../src/primitives/Hex/index.ts"],
			"voltaire/primitives/Hash": ["../src/primitives/Hash/index.ts"],
			"voltaire/primitives/RLP": ["../src/primitives/RLP/index.ts"],
			"voltaire/primitives/ABI": ["../src/primitives/ABI/index.ts"],
			"voltaire/crypto/Keccak256": ["../src/crypto/Keccak256/index.ts"],
			"voltaire/crypto/Secp256k1": ["../src/crypto/Secp256k1/index.ts"],
			"voltaire/crypto/SHA256": ["../src/crypto/SHA256/index.ts"],
			"voltaire/crypto/Blake2": ["../src/crypto/Blake2/index.ts"],
			"voltaire/crypto/Ripemd160": ["../src/crypto/Ripemd160/index.ts"],
			"voltaire/crypto/HDWallet": ["../src/crypto/HDWallet/index.ts"]
		},

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"erasableSyntaxOnly": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedSideEffectImports": true
	},
	"include": ["src"]
}
