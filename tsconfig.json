{
	"extends": "@tevm/tsconfig/base.json",
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "types",
		"skipLibCheck": true,
		"types": ["bun-types"],
		"noPropertyAccessFromIndexSignature": false,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"strict": false
	},
	"include": ["src/**/*.ts", "src/**/*.js", "src/**/*.json"],
	"exclude": [
		"node_modules",
		"node_modules/**/*",
		".astro/**/*",
		"src/content.config.ts",
		"src/content/docs/primitives/abi",
		"src/content/docs/primitives/accesslist",
		"src/content/docs/primitives/authorization",
		"src/content/docs/primitives/blob",
		"src/content/docs/primitives/ens",
		"src/content/docs/primitives/eventlog",
		"src/content/docs/primitives/feemarket",
		"src/content/docs/primitives/gasconstants",
		"src/content/docs/primitives/hardfork",
		"src/content/docs/primitives/opcode",
		"src/content/docs/primitives/rlp",
		"src/content/docs/primitives/siwe",
		"src/content/docs/primitives/state",
		"astro.config.mjs",
		"src/components/**/*",
		"src/env.d.ts"
	]
}
