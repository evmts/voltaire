{
	"extends": "@tevm/tsconfig/base.json",
	"compilerOptions": {
		"outDir": "./dist",
		"declarationDir": "./types",
		"rootDir": "./src/typescript",
		"composite": true,
		"incremental": true
	},
	"include": ["src/typescript/**/*"],
	"exclude": [
		"node_modules",
		"dist",
		"types",
		"wasm",
		"native",
		"zig-out",
		"zig-cache",
		"**/*.spec.ts",
		"**/*.test.ts"
	]
}
